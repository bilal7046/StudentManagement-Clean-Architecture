@page
@model StudentManagement.Pages.Student.IndexModel
@{
}
<div class="container my-4">
    <h2>Students List
        <span style="float:right">
            <a class="btn btn-primary" href="/student/create">Add Student</a>
        </span>
    </h2>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
               
                <th>Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model.Students)
            {
                <tr>
                    <td>@student.Name</td>
                    <td>@student.Email</td>
                    <td>@student.Address</td>
                    <td>
                        <a asp-page="./Detail" asp-route-id="@student.Id" class="btn btn-info btn-sm">
                            <i class="fas fa-eye"></i> Detail
                        </a>
                        <a asp-page="./Edit" asp-route-id="@student.Id" class="btn btn-success btn-sm">
                            <i class="fas fa-eye"></i> Edit
                        </a>
                        <a asp-page="./deleteconfirm" asp-route-id="@student.Id" class="btn btn-danger btn-sm">
                            <i class="fas fa-eye"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>